.header {
	display: flex;
	height: 80rpx;
	margin: 30rpx;
	border: 1rpx solid #f0f0f0;
	box-shadow: 0 0 5rpx #f0f0f0;
	padding: 10rpx 30rpx;
	align-items: center;
}
.header image {
	width: 60rpx;
	height: 60rpx;
	margin-right: 10rpx;
}
.header input {
	flex: 1;
	height: 60rpx;
	padding-left: 20rpx;
}
.container {
	margin: 30rpx;
	border: 1rpx solid #f0f0f0;
	box-shadow: 0 0 5rpx #f0f0f0;
}
.container .item {
	display: flex;
	align-items: center;
	height: 60rpx;
	padding: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
}
.container .item:last-child {
	border-bottom: none;
}
.container .item text {
	flex: 1;
	margin-left: 20rpx;
}
.completed {
	color: #ccc;
	text-decoration: line-through;
}
.footer {
	display: flex;
	justify-content: space-around;
}
.footer text {
	font-size: 30rpx;
	color: #ccc;
}
.noTodo {
	margin-left: 30rpx;
	color: #444;
	font-size: 30rpx;
}