/* pages/index1/index1.wxss */
.root {
  display: flex;
  height: 100%;
  flex-direction: column;
}
.tabs {
  display: flex;
  height: 40px;
  background-color: #181A1C;
}
.item {
  flex: 1;
  padding-top: 8px;
  text-align: center;
  color: #ccc;
  font-size: 14px;
}
.item-active {
  background-color: #333;
  border-bottom: 2px solid #92473D;
}
.content {
  flex: 1;
  background-color: #181A1C;
  overflow: hidden;
}
.img image {
  width: 100%;
  height: 120px;
}
.list {
  display: flex;
}
.list-item {
  flex: 1;
  text-align: center;
  font-size: 14px;
  color: #ccc;
}
.list-item image {
  display: block;
  width: 60px;
  height: 60px;
  margin: 20px auto 5px;
}
.inner-title {
  display: flex;
  padding: 10px;
  justify-content: space-between;
  color: #ccc;
  font-size: 14px;
}
.inner-content {
  display: flex;
  flex-wrap: wrap;
}
.inner-item {
  width: 33.33333%;
  font-size: 12px;
  color: #ccc;
}
.inner-item image {
  display: block;
  width: 120px;
  height: 120px;
  margin: 0 auto;
}
.inner-item text {
  display: block;
  width: 120px;
  margin: 0 auto;
}
.btns {
  display: flex;
  height: 60px;
  background-color: #fff;
}
.photo  image {
  width: 50px;
  height: 50px;
  margin: 4px;
}
.song {
  flex: 1;
  font-size: 14px;
}
.song .title {
  display: block;
  font-size: 16px;
  margin: 3px 0;
}
.icon-btn {
  display: inline-block;
  
}
.icon-btn image {
  width: 40px;
  height: 40px;
  margin: 8px 3px
}